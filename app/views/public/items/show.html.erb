
<!--部分テンプレート-->
<%= render 'public/items/genre_search', genres: @genres %>



<!--画像-->
<%= image_tag @item.get_item_image, size: "200x200" %>


<!--商品名-->
<h2><%= @item.name %></h2>
<p><%= @item.introduction %></p>
<h3>¥<%= @item.with_tax_price.to_s(:dalimited) %>(税込)</h3>

<%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>

<%= f.label "個数選択" %>
<%= f.hidden_field :item_id, :value => @item.id %>
<!--<= f.select :quantity, [['いち',1], ['に',2], ['さん',3] %>-->
<!--<= f.select :quantity,*[1..3] %>-->
<%= f.select :quantity, *[1..10] %>

<!--カートに入れる-->
<%= f.submit "カートに入れる", class: "btn btn-success" %>

<% end %>