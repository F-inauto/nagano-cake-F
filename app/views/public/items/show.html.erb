<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-3'>
      <!--部分テンプレート-->
      <%= render 'public/items/genre_search', genres: @genres %>
    </div>


    <div class="col-2 ml-3">
      <!--画像-->
      <%= image_tag @item.get_item_image, size: "200x200" %>
    </div>

    <!--商品名-->
    <div class=" col-5 ml-5">
      <h4><%= @item.name %></h4>
      <br>
     <h6><%= @item.introduction %></h6>
     <br>
       <!--<div class="font-weight-bold mt-3 text-nowrap">-->
     <h4>¥<%= @item.with_tax_price.to_s(:dalimited) %>(税込)</h4>
    </div>


    <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>

    <button type="button" class="btn btn-outline-white ml-3" data-toggle="modal" data-target="#forLogin">
      <i class="fas fa-shopping-cart"></i>
        <%= f.label :"個数選択",class: "ml-3" %>
        <!--<= f.label "個数選択",class: "btn btn-outline-dark ml-3">-->
        <!--<i class="fas fa-shopping-cart"></i>cart-->

      <%= f.hidden_field :item_id, :value => @item.id %>
      <!--<= f.select :quantity, [['いち',1], ['に',2], ['さん',3] %>-->
      <!--<= f.select :quantity,*[1..3] %>-->
      <%= f.select :quantity, *[1..10] %>
      <!--カートに入れる-->
      <!--<= f.submit "カートに入れる", class: "btn btn-success" >-->
      <%= f.submit "カートに入れる",class: "ml-3" %>
      <% end %>
    </div>
  </div>
</div>

