<div class="container">
  <div class="row">
<%= render 'public/items/genre_search', genres: @genres %>

<div class="container">
    <div class="row">
        <div class="color">
<!--countメソッドの使い方-->
<h2>商品一覧(全<%= @items.all.count %>件)</h2>
<!--商品一覧-->
<div class="col-10">
<div class="row">
<% @items.each do |item| %>
<table>
  <tr>
    <th>
      <div class="col-3">
      <%= link_to item_path(item) do %>
      <%= image_tag item.get_item_image, size: "200x200" %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>
      <%= item.name %>
    </th>
  </tr>
  <tr>
    <th>
      ¥<%= item.with_tax_price.to_s(:dalimited) %>
    </th>
  </tr>
<% end %>
</table>

  </div>
<!--ページネーション加える-->
<%= paginate @items %>
    </div>
  </div>
</div>