<div class="container">
  <div class="row">
    <div class="col-mg-8">
      <table>
        <thead>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </thead>
          <% @cart_items.each do |cart_item| %>
        <tbody>
          <!-- ユーザーに確認してもらうための表示です -->
            <th><%= cart_item.item.name %></th><!-- 商品名 -->
            <th><%= (cart_item.item.with_tax_price).to_s(:delimited) %>　<!-- 金額 --></th>
            <th><%= cart_item.quantity %> <!-- 個数 --></th>
            <th><%= cart_item.subtotal.to_s(:delimited) %> <!-- 小計 --></th>
            <% @sum += cart_item.subtotal %>
        </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>
<div class = "container">
  <div class="row">
    <table>
      <tr>
        <th>送料</th>
        <th>1000</th>
      </tr>
      <tr>
        <th>合計金額</th>
        <th><%= @sum.to_s(:delimited) %> <!-- お買い物の合計金額 --></th>
      </tr>
      <tr>
        <th>請求金額</th>
        <th><%= @sum + 1000 %></th>
      </tr>
    </table>
  </div>
  <div class="row">
    <tr>
      <th>
        支払方法
      </th>
      <th></th>
      <th>
        <%= @order.payment_method %>
      </th>
    </tr>
    <tr>
      <th>
        お届け先
      </th>
      <th></th>
      <th>
        〒<%= @order.post_number %>
        <%= @order.address %>
        <%= @order.name%>

      </th>
    </tr>
  </div>
</div>



    <!-- ユーザーには注文確定ボタンだけ表示します -->
    <%= form_with model: @order, url: orders_path, method: :post , local: true do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :total_payment, value: @sum + 1000 %>
      <%= f.submit "注文を確定する" %>
    <% end %>
