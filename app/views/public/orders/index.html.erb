 <div class="container">
   <h3>注文履歴一覧</h3>
   <div class="row">
     <table class="border table-striped table table-hover">
        <thead >
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
            <th>
              〒<%= order.post_number %>
              <%= order.address %>
              <%= order.name %>
            </th>
            <th>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %>
              <% end %>
            </th>

            <th>
              <%= order.total_payment %>
            </th>
            <th>
              <%= order.order_status %>
            </th>
            <th>
              <%= link_to "表示する" , order_path(order.id), class: "btn btn-primary" %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
   </div>
      <p><%= paginate @orders %></p>
 </div>