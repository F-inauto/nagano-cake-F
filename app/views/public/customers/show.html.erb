<hi>マイページ</hi>
<td>登録情報</td>
<td><%= link_to '編集する', customers_mypage_edit_path, class: "btn btn-sm btn-success" %></td>
<table class='table'>
  <tr>
	  <th>会員ID</th>
	  <th><%= @customer.id %></th>
  </tr>
  <tr>
	  <th>氏名</th>
	  <th><%= @customer.last_name %><%= @customer.first_name %></th>
  </tr>
  <tr>
	  <th>フリガナ</th>
	  <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
  </tr>
  <tr>
	  <th>郵便番号</th>
	  <th><%= @customer.post_number %></th>
  </tr>
  <tr>
	  <th>住所</th>
	  <th><%= @customer.address %></th>
  </tr>
  <tr>
	  <th>電話番号</th>
	  <th><%= @customer.phone_number %></th>
  </tr>
  <tr>
	  <th>メールアドレス</th>
	  <th><%= @customer.email %></th>
  </tr>
</table>
<td>配送先</td>
<td><%= link_to '一覧を見る', address_path(@customer), class: "btn btn-sm btn-primary" %></td>
<td>注文履歴</td>
<td><%= link_to '一覧を見る', orders_path(@customer), class: "btn btn-sm btn-primary" %></td>