<div class="container">
  <div class="row">
   <div class="col-3-md offset-1 mt-5">
     <h3 class="mb-4">ショッピングカート</h3>
    </div>
  </div>

  <!--カートを空にする作業-->
  <% if  @cart_items.exists? %>
    <%= link_to "カートを空にする", cart_item_cart_items_all_destroy_path(current_customer.id), method: :delete, class: "btn btn-danger" %>
  <% end %>


  <!--カート内の商品を表示-->
  <table class="table">
    <thead>
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
      </tr>
    </thead>

    <!--合計金額totalの初期化-->
    <% sum = 0 %>

    <!--カート内に商品があった場合-->
    <% if  @cart_items.exists? %>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.item_image, size: "50x50" %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.select :quantity, *[1..10], {selected: cart_item.quantity.to_i} %>
            <%= f.submit "変更" %>
            <% end %>
            </td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
        </tr>
        <% @sum += cart_item.subtotal %>
      <% end %>
    </tbody>
  </table>

  <table class="table">
    <tr>
      <th>合計金額</th>
      <td><%= @sum %></td>
    </tr>
  </table>

   <%= link_to "買い物を続ける", items_path, class: "btn-success" %>

  <p class="text-center">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-primary" %>
  </p>

  <!--カートに商品が入っていなかった時-->
  <% else %>
    <p class="text-center">現在カートに商品は入っていません。</p>
    <p class="text-center">
      <%= link_to "商品一覧へ", items_path %>
    </p>

  <% end %>
</div>