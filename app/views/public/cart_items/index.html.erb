<div class="container">
  <div class="row">
   <div class="col-3-md offset-1 mt-5">
     <h2 class="mb-4">ショッピングカート</h2>
    </div>
  </div>

  # カート内の商品を表示
  <table class="table">
    <thead>
      <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.get_item_image(50,50) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= @cart_items.add_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.select :quantity, *[1..10], {selected: cart_item.quantity.to_i} %>
            <%= f.submit "変更" %>
            <% end %>
            </td>
          <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
　</table>

　<%= link_to "買い物を続ける", items_path %>

　<table class="table">
    <tr>
      <th>合計金額</th>
      <td><%= @total.round.to_s(:delimited)%></td>
    </tr>
  </table>

  <p class="text-center">
    <%= link_to "情報入力に進む", new_order_path %>
  </p>