<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-2'>
      <h3 class="my-4 mt-5">商品詳細</h3>

　　　<div class="text-center">
        <!--商品画像-->
        <%= image_tag @item.get_item_image, size: "200x200" %>
    　</div>

    <!--商品詳細-->

      <div class="text-center">
        <br>
        <table class="table table-hover">
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>

          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>

          <tr>
            <th>ジャンル</th>
            <th><%= @item.genre.name %></th>
          </tr>

          <tr>
            <th> 税込価格<br>(税抜価格)</th>
            <th><%= @item.price %>(<%= @item.with_tax_price.to_s(:dalimited) %>)円</th>
          </tr>

          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @item.is_active == true %>
              販売中
              <% else %>
              販売停止中
              <% end %>
            </th>
          </tr>
        </table>
      </div>

      <table class="table table-hover">
      <div>
      <!--編集ボタン-->
      <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
      </div>
      <br>
      <!--あとで削除-->
      <div>
        <%= link_to "削除する", admin_item_path(@item), method: :delete, data: {confirm:  "本当に削除しますか？"}, class: 'btn btn-success' %>
      </div>

    </div>

  </div>
</div>









