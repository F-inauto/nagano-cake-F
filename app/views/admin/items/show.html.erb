
<div class ="container">
  <h2>商品詳細</h2>
  <div class ="row">
    <div class="col-xs-4">
      <!--商品画像-->
      <%= image_tag @item.item_image, size: "200x200" %>
    </div>

    <!--商品詳細-->
    <div class="col-xs-8">
      <table>
        <tr>
          <th>商品名</th>
          <th><%= @item.name %></th>
        </tr>

        <tr>
          <th>商品説明</th>
          <th><%= @item.introduction %></th>
        </tr>

        <tr>
          <th>ジャンル</th>
          <th><%= @item.genre.id %></th>
        </tr>

        <tr>
          <th> 税込価格<br>(税抜価格)</th>
          <th><%= @item.price %>円</th>
        </tr>

        <tr>
          <th>販売ステータス</th>
          <th></th>
        </tr>

      </table>
      <div>
      <!--編集ボタン-->
      <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
      </div>
    </div>

  </div>
</div>









