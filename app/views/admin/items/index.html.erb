<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h3 class="my-4 mt-5">商品一覧</h3>

      <%= link_to new_admin_item_path, style:"font-size: 35px;" do %>
        <i class="fas fa-plus-circle"></i>
      <% end %>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <!--商品ID-->
            <th><%= item.id %></th>
            <!--商品名-->
            <th>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </th>
            <!--税抜価格-->
            <th><%= number_to_currency(item.price, unit: "¥", format: "%u %n" ) %></th>
            <!--ジャンル-->
            <th><%= item.genre.name %></th>
            <!--Q：販売ステータスの表記の仕方-->
            <th>
              <% if item.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
        <!--ページネーション必要（３P毎表記）-->
        <%= paginate @items %>
    </div>
  </div>
</div>


