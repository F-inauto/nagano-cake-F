

<div class='container'>
  <h3>注文履歴一覧</h3>
  <div class ='row'>
    <div class = "border table-striped table table-hover">
      <table class = "col-md-12">
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <!--購入日時(lメソッドを使う)-->
              <td><%= link_to admin_order_path(order.id) do %>
                  <%= l order.created_at %>
                  <% end %>
              </td>
              <!--購入者-->
              <td><%= order.name %></td>
              <!--注文個数-->
              <td>
                <% @amount_sum = 0 %>
                <% order.order_details.each do |detail| %>
                <% @amount_sum += detail.quantity %>
                <% end %>
                <!--出力-->
                <%= @amount_sum %>
              </td>
              <!--注文ステータス-->
              <td><%= order.order_status_i18n %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
    </div>
    <div>
       <!--ページネーション必要（３P毎表記）-->
       <%= paginate @orders %>
    </div>
  </div>
</div>
