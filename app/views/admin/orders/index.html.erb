<h3>注文履歴一覧</h3>
<table>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <!--購入日時(lメソッドを使う)-->
        <td><%= link_to l order.created_at, admin_order_path(order.id) %></td>
        <!--購入者-->
        <td><%= order.customer.name %></td>
        <!--注文個数-->
        <td><%= order.quantity %></td>
        <!--注文ステータス-->
        <td><%= order.order_status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <!--ページネーション必要（３P毎表記）-->
  <%= paginate @orders %>