<h3>注文履歴詳細</h3>

<!--顧客情報のテーブル-->
<table>
  <tbody>
    <tr>
      <th>購入者</th>
      <td><%= link_to @order.name , admin_customer_path(@order.customer.id) %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>
        <p><%= @order.post_number %></p>
        <p><%= @order.address %></p>
        <p><%= @order.name %></p>
      </td>
    </tr>
    <tr>
      <th>支払い方法</th>
      <td><%= @order.payment_method %><td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td>
        <!--form_with記載-->
        <%= form_with(model: @order, url: admin_order_path, method: :patch, local: true) do |f| %>
        <%= f.select :order_status, Order.order_statuses.keys, class: "order_status" %>
        <%= f.submit "更新" , class: "btn btn-success" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>


