<hi>会員一覧</hi>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |user| %>
      <tr>
        <td>
            <%= user.id %>
        </td>
        <td>
        <%= link_to admin_customer_path(user) do%>
          <%= user.last_name %><%= user.first_name %>
        <% end %>
        </td>
        <td><%= user.email%></td>
        <td><%= user.is_valid%></td>
      </tr>
    <% end %>
  </tbody>
    <%= paginate @customers %>
</table>
