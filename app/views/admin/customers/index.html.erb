<div class = "container">
  <h3>会員一覧</h3>
  <div class = "row">
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |user| %>
          <tr>
            <td>
                <%= user.id %>
            </td>
            <td>
            <%= link_to admin_customer_path(user) do%>
              <%= user.last_name %><%= user.first_name %>
            <% end %>
            </td>
            <td><%= user.email%></td>
            <% if user.is_valid == '有効'  %>
        	    <td class = "text-success">
        	      <%= user.is_valid %>
        	    </td>
        	  <%else%>
        	    <td class = "text-danger">
        	      <%= user.is_valid %>
        	    </td>
        	  <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
      <p><%= paginate @customers %></p>
  </div>
</div>
