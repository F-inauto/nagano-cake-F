<!--商品名のテーブル-->
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.order.name %></td>
      <td><%= order_detail.price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.price * amount %></td>
      <td>
          <%= form_with(model: order_detail , url: admin_order_ditails_path, method: :patch, local: true) do |f| %>
          <%= f.select :,making_status, Order_details.making_statuses.keys, class: "making_status" %>
          <%= f.submit "更新" , class: "btn btn-success" %>
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= 確認 %></td>
    </tr>
    <tr>
      <th>送料</th>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <td><%= @order.total_payment %></td>
    </tr>
  </tbody>

</table>

